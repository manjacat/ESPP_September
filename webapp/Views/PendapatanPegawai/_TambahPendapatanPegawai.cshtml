

@model eSPP.Models.HR_KEWANGAN8
<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Tambah Pendapatan Pegawai <span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("TambahPendapatanPegawai", "PendapatanPegawai", FormMethod.Post, new { id = "order-form", @class = "smart-form", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HR_KOD_KEW8);

            <fieldset>
                
                <section>
                    <div class="row">
                        <label class="label col col-4">Nama Perubahan  </label>
                        <div class="col col-8">
                            <label class="input">
                                <i class="icon-append fa fa-briefcase"></i>
                                @Html.EditorFor(model => model.HR_PENERANGAN, new { htmlAttributes = new { @class = "form-control" } })
                              
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Singkatan  </label>
                        <div class="col col-8">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                @Html.EditorFor(model => model.HR_SINGKATAN, new { htmlAttributes = new { @class = "form-control"} })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Perlu Penyata Perkhidmatan</label>
                        <div class="col col-8">
                            <div class="inline-group">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_PENYATA_IND, "T", htmlAttributes: new { @checked = "checked" })
                                    <i></i>Tidak
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_PENYATA_IND, "Y", htmlAttributes: new { @class = "form-control"})
                                    <i></i>Ya
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Perubahan Gaji</label>
                        <div class="col col-8">
                            <div class="inline-group">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_GAJI_IND, "T", htmlAttributes: new { @class = "form-control"})
                                    <i></i>Tidak
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_GAJI_IND, "Y", htmlAttributes: new { @checked = "checked" })
                                    <i></i>Ya
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer>
                <button type="submit" id="btn" class="btn btn-primary">
                    <span class="fa fa-send-o"></span> Hantar
                </button>
                <a type="button" class="btn btn-default" href="pendapatanpegawai">
                    Kembali
                </a>

               
            </footer>
          
        }

    </div>

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });

            var $orderForm = $("#order-form").validate({
                // Rules for form validation
                rules: {
                    HR_PENERANGAN: {
                        required: true,
                        remote: {
                            url: "PendapatanPegawai/CariPendapatan",
                            type: "get",
                            data: {
                                penerangan: function () {
                                    return $("#HR_PENERANGAN").val();
                                },
                                kod: function () {
                                    return $("#HR_KOD_KEW8").val();
                                }
                            }
                        }
                    },
                    HR_SINGKATAN: {
                        required: true,
                        remote: {
                            url: "PendapatanPegawai/CariPendapatan",
                            type: "get",
                            data: {
                                singkatan: function () {
                                    return $("#HR_SINGKATAN").val();
                                },
                                kod: function () {
                                    return $("#HR_KOD_KEW8").val();
                                }
                            }
                        }
                    },
                    

                },

                // Messages for form validation
                messages: {
                    HR_PENERANGAN: {
                        required: 'Nama Perubahan diperlukan'
                    },
                    HR_SINGKATAN: {
                        required: 'Singkatan diperlukan'
                    },
                   
                },

               


                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
                
               
                 
            });

           
        })
    </script> 
