


@model eSPP.Models.HR_KATEGORI_KURSUS

<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Edit Kategori Latihan<span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("EditLatihan", "KategoriLatihan", FormMethod.Post, new { id = "order-form", @class = "smart-form", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           @Html.HiddenFor(model => model.HR_KOD_KATEGORI);
            <fieldset>
                <section>
                    <div class="row">
                        <label class="label col col-4">Singkatan  </label>
                        <div class="col col-8">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                @Html.EditorFor(model => model.HR_SINGKATAN, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Penerangan  </label>
                        <div class="col col-8">
                            <label class="textarea textarea-resizable">
                                <i class="icon-append fa fa-comment"></i>
                                @Html.TextAreaFor(model => model.HR_PENERANGAN, new { @class = "form-control", rows = 5 })

                            </label>
                        </div>
                    </div>
                </section>
            </fieldset>

            <footer>
                <button type="submit" id="btn" class="btn btn-primary">
                    <span class="fa fa-send-o"></span> Hantar
                </button>
                <a type="button" class="btn btn-default" href="kategorilatihan">
                    Kembali
                </a>
            </footer>
                                    }

    </div>

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });

            var $orderForm = $("#order-form").validate({
                // Rules for form validation
                rules: {
                    HR_SINGKATAN: {
                        required: true,
                        remote: {
                            url: "KategoriLatihan/CariEditLatihan",
                            type: "get",
                            data: {
                                singkatan: function () {
                                    return $("#HR_SINGKATAN").val();
                                },
                                kod: function () {
                                    return $("#HR_KOD_KATEGORI").val();
                                }
                            }
                        }
                    },
                    HR_PENERANGAN: {
                        required: true,
                        remote: {
                            url: "KategoriLatihan/CariEditLatihan",
                            type: "get",
                            data: {
                                penerangan: function () {
                                    return $("#HR_PENERANGAN").val();
                                },
                                kod: function () {
                                    return $("#HR_KOD_KATEGORI").val();
                                }
                            }
                        }
                    },

                },

                // Messages for form validation
                messages: {
                    HR_SINGKATAN: {
                        required: 'Nama Singkatan diperlukan'
                    },
                    HR_PENERANGAN: {
                        required: 'Penerangan diperlukan'
                    },


                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        })
    </script> 
