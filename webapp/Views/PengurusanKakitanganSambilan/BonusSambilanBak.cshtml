									<button type="submit" class="btn btn-default" onclick="window.location.href('@Url.Action("bonussambilan","pengurusankakitangansambilan")')" id="Batal" name="Command" value="Batal"><i class="fa fa-refresh"></i> Batal</button>
								</footer>

							</form>
							}
							</div>
						</div>
                </div>
            </article>

        </div>
    </section>
</div>
