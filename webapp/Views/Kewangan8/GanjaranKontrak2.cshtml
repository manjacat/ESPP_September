@model IEnumerable<eSPP.Models.HR_MAKLUMAT_PERIBADI>

<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Forms
                <span>
                    >
                    Ganjaran Kontrak
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-sm-12">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2>Ganjaran Kontrak</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">

                            <div class="row">

                                <div class="col col-lg-8 col-md-10 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-1">
                                    <div class="well">
                                        @using (Html.BeginForm("GanjaranKontrak", "Kewangan8", FormMethod.Get))
                                        {

                                            <div class="row">
                                                <div class="col smart-form col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                                    <div class="select">
                                                        <select name="key" id="key" class="form-control">
                                                            <option selected disabled="disabled">Jenis</option>
                                                            <option value="1">No. Pekerja</option>
                                                            <option value="2">Nama Pekerja</option>
                                                            <option value="3">No. KP(Baru)</option>
                                                        </select>
                                                        <i></i>
                                                    </div>
                                                </div>
                                                <div class="col smart-form col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                    <div class="input">
                                                        <input type="text" name="value" id="value" class="form-control" placeholder="Data" />
                                                    </div>
                                                </div>
                                                <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                                    <div class="button">
                                                        <button class="btn btn-default btn-primary" type="submit">
                                                            <i class="fa fa-search"></i> Cari
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>
                            <br />

                            @using (Html.BeginForm("GanjaranKontrak", "Kewangan8", FormMethod.Post, new { id = "formKew8" }))
                            {
                                List<HR_GAMBAR_PENGGUNA> gambarUser = (List<HR_GAMBAR_PENGGUNA>)ViewBag.gambar;
                                if (Model.Count() > 0)
                                {
                                    var style = "";
                                    if (Model.Count() > 4)
                                    {
                                        style = "overflow-y:scroll; height:750px";
                                    }
                                    <div style="@style">
                                        @foreach (var HR_MAKLUMAT_PERIBADI in Model)
                                        {
                                            <div class="well">
                                                <fieldset>
                                                    <div class="row" id="infoKakitangan">
                                                        <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                                            <div class="row">
                                                                <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                                    @{ HR_GAMBAR_PENGGUNA Gambar = gambarUser.SingleOrDefault(s => s.HR_NO_PEKERJA == HR_MAKLUMAT_PERIBADI.HR_NO_PEKERJA);}

                                                                    @if (Gambar == null)
                                                                    {

                                                                        if (HR_MAKLUMAT_PERIBADI.HR_JANTINA == "P")
                                                                        {
                                                                            <img id="img" src="~/content/img/avatars/female.png" alt="" width="120" height="120" />
                                                                        }
                                                                        else
                                                                        {
                                                                            <img id="img" src="~/content/img/avatars/male.png" alt="" width="120" height="120" />
                                                                        }

                                                                    }
                                                                    else
                                                                    {
                                                                        var gambar = Gambar.HR_PHOTO + Gambar.HR_FORMAT_TYPE;
                                                                        <img id="img" src="~/content/uploads/@gambar" alt="" width="120" height="120" />
                                                                    }

                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="col col-lg-8 col-md-8 col-sm-10 col-xs-12 smart-form">
                                                            <div class="row">
                                                                <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                                    <label class="label col-lg-2 col-md-2 col-sm-2">Nama Pekerja</label>
                                                                    <div class="col-lg-6 col-md-8 col-sm-8">
                                                                        <label class="input">
                                                                            <i class="icon-append fa fa-user"></i>
                                                                            @Html.EditorFor(model => HR_MAKLUMAT_PERIBADI.HR_NAMA_PEKERJA, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                                                                        </label>
                                                                    </div>

                                                                </section>
                                                            </div>
                                                            <div class="row">
                                                                <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                                    <label class="label col-lg-2 col-md-2  col-sm-2">No. KP (Baru)</label>
                                                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                                                        <label class="input">
                                                                            <i class="icon-append fa fa-list-alt"></i>
                                                                            @Html.EditorFor(model => HR_MAKLUMAT_PERIBADI.HR_NO_KPBARU, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", maxlength = "12" } })
                                                                        </label>
                                                                    </div>

                                                                </section>
                                                            </div>
                                                            <div class="row">
                                                                <section class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                                    <label class="label col-lg-2 col-md-2 col-sm-2">No. Pekerja</label>
                                                                    <div class="col-lg-2 col-md-2 col-sm-2">
                                                                        <label class="input">
                                                                            <i class="icon-append fa fa-list-alt"></i>
                                                                            @Html.EditorFor(model => HR_MAKLUMAT_PERIBADI.HR_NO_PEKERJA, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", maxlength = "5" } })

                                                                        </label>
                                                                    </div>

                                                                </section>
                                                            </div>
                                                        </div>
                                                        @if (ViewBag.key != "4")
                                                        {
                                                            <div class="col col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                                                <section>
                                                                    <a class="btn btn-default btn-primary" href="@Url.Action("GanjaranKontrak","Kewangan8", new { key = "4", value = HR_MAKLUMAT_PERIBADI.HR_NO_PEKERJA})" title="Profil Kakitangan">
                                                                        Lihat Info
                                                                    </a>
                                                                </section>
                                                            </div>
                                                        }

                                                    </div>
                                                </fieldset>
                                            </div>
                                        }
                                    </div>
                                    <br />
                                    if (ViewBag.key == "4")
                                    {
                                        <fieldset>
                                            <legend>
                                                Penyata Perubahan Mengenai Pendapatan Seseorang Pegawai
                                            </legend>
                                            <div class="row smart-form">
                                                <div class="col col-6">
                                                    <section>
                                                        <div class="row">
                                                            <label class="label col col-4">Jawatan</label>
                                                            <div class="col col-8">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_JAWATAN", (string)ViewBag.jawatan, new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>

                                                <div class="col col-6">
                                                    <section>
                                                        <div class="row">
                                                            <label class="label col col-4">Kod Gaji Berkomputer</label>
                                                            <div class="col col-4">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_KOD_GAJI", (string)ViewBag.kodGaji, new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>
                                                            <label class="label col col-2">Gred</label>
                                                            <div class="col col-2">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_GRED", (string)ViewBag.gred, new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </fieldset>

                                        <fieldset>
                                            <legend>
                                                Gaji Bulanan
                                            </legend>
                                            <div class="row smart-form">
                                                <div class="col col-6">
                                                    <section>
                                                        <div class="row">
                                                            <label class="label col col-4">Gaji Pokok</label>
                                                            <div class="col col-2">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_GAJI_POKOK", string.Format("{0:0.00}", (decimal?)ViewBag.gaji), new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>
                                                            <label class="label col col-4">Imbuhan Tetap Perumahan</label>
                                                            <div class="col col-2">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_ITP", string.Format("{0:0.00}", (decimal?)ViewBag.itp), new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>

                                                <div class="col col-6">
                                                    <section>
                                                        <div class="row">
                                                            <label class="label col col-4">Elaun Khidmat Awam</label>
                                                            <div class="col col-2">
                                                                <label class="input">
                                                                    @Html.TextBox("HR_KOD_GAJI", string.Format("{0:0.00}", (decimal?)ViewBag.awam), new { @class = "form-control", @readonly = "readonly" })
                                                                </label>
                                                            </div>

                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </fieldset>

                                        <fieldset>
                                            <legend>
                                                Senarai Kewangan 8 Yang Telah Muktamat
                                            </legend>
                                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th data-class="expand" width="30%">Butir Perubahan</th>
                                                        <th data-hide="phone,tablet">Catatan</th>
                                                        <th>Tarikh Keyin</th>
                                                        <th>Tarikh Mula</th>
                                                        <th data-hide="phone">Tarikh Muktamat</th>
                                                        <th data-hide="phone">Ind Mukt.</th>
                                                        <th>Pilih</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ var no = 0;}
                                                    @foreach (HR_MAKLUMAT_KEWANGAN8 item in Model)
                                                    {
                                                        List<HR_MAKLUMAT_KEWANGAN8_DETAIL> Detail = (List<HR_MAKLUMAT_KEWANGAN8_DETAIL>)ViewBag.detail;
                                                        List<HR_MAKLUMAT_KEWANGAN8_DETAIL> detail = Detail.Where(s => s.HR_NO_PEKERJA == item.HR_NO_PEKERJA && s.HR_KOD_PERUBAHAN == item.HR_KOD_PERUBAHAN && s.HR_TARIKH_MULA == item.HR_TARIKH_MULA && s.HR_KEW8_ID == item.HR_KEW8_ID).ToList();
                                                        var ind = "Tidak Aktif";
                                                        var color = "label-danger";
                                                        if (detail.Count() > 0)
                                                        {
                                                            foreach (var item2 in detail)
                                                            {
                                                                ++no;
                                                                <tr>
                                                                    <td align="center">@no</td>
                                                                    <td><a class="Info" id="Info" href="javascript:void(0)" data-id="@item.HR_KEW8_ID" data-kodperubahan="@item.HR_KOD_PERUBAHAN" data-tarikh="@item.HR_TARIKH_MULA" data-kodpelarasan="@item2.HR_KOD_PELARASAN" title="Info">@Html.DisplayFor(model => item.HR_BUTIR_PERUBAHAN)</a></td>
                                                                    <td>@Html.DisplayFor(model => item.HR_CATATAN)</td>
                                                                    <td>@string.Format("{0:dd/MM/yyyy}", item.HR_TARIKH_KEYIN)</td>
                                                                    <td>@string.Format("{0:dd/MM/yyyy}", item.HR_TARIKH_MULA)</td>
                                                                    <td>@string.Format("{0:dd/MM/yyyy}", item.HR_TARIKH_FINALISED_HR)</td>
                                                                    <td>
                                                                        @if (item.HR_FINALISED_IND_HR == "Y")
                                                                        {
                                                                            ind = "Muktamat";
                                                                            color = "label-success";
                                                                        }
                                                                        else if (item.HR_FINALISED_IND_HR == "P")
                                                                        {
                                                                            ind = "Proses";
                                                                            color = "label-warning";
                                                                        }
                                                                        <span class="center-block padding-5 label @color">
                                                                            @ind
                                                                        </span>

                                                                    </td>
                                                                    <td>
                                                                        <a class="btn btn-default btn-xs Edit" id="Edit" href="javascript:void(0)" data-id="@item.HR_KEW8_ID" data-kodperubahan="@item.HR_KOD_PERUBAHAN" data-tarikh="@item.HR_TARIKH_MULA" data-kodpelarasan="@item2.HR_KOD_PELARASAN" title="Kemaskini"><i class="fa fa-edit"></i></a>
                                                                        <a class="btn btn-default btn-xs Padam" id="Padam" href="javascript:void(0)" data-id="@item.HR_KEW8_ID" data-kodperubahan="@item.HR_KOD_PERUBAHAN" data-tarikh="@item.HR_TARIKH_MULA" data-kodpelarasan="@item2.HR_KOD_PELARASAN" title="Padam"><i class="fa fa-trash-o"></i></a>
                                                                    </td>
                                                                </tr>
                                                            }

                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                            <!-- Modal -->
                                            <div class="modal fade" id="Modal" tabindex="-1" role="dialog">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div id='ModalContent'></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- End Modal -->
                                        </fieldset>
                                    }
                                }

                            }
                        </div>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>
@section pagespecific {
    <script type="text/javascript">

        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {

            /* // DOM Position key index //

