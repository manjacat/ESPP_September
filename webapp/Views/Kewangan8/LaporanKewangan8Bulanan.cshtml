                                                                <i></i>
                                                            </label>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
                                                            <label class="input">
                                                                @Html.TextBox("tahun", (int)ViewBag.year, new { @class = "form-control", size = 4, id = "tahun" })
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left smart-form">
                                                            <b>Status Muktamat : </b>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 smart-form">
                                                            <div class="inline-group">
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="S" checked="checked">
                                                                    <i></i>Semua
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="Y">
                                                                    <i></i>Ya
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="T">
                                                                    <i></i>Tidak
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="P">
                                                                    <i></i>Proses
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                    @using (Html.BeginForm("PDFLaporanKewangan8Bulanan", "Kewangan8", FormMethod.Post, new { id = "form-print", target = "_blank" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row hide">
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
                                                            <label class="select">
                                                                @Html.DropDownList("bulan", new SelectList(ViewBag.month, "Value", "Text"), new { @class = "form-control", id = "bulan" })
                                                                <i></i>
                                                            </label>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
                                                            <label class="input">
                                                                @Html.TextBox("tahun", (int)ViewBag.year, new { @class = "form-control", size = 4, id = "tahun" })
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left smart-form">
                                                            <b>Status Muktamat : </b>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 smart-form">
                                                            <div class="inline-group">
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="S" checked="checked">
                                                                    <i></i>Semua
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="Y">
                                                                    <i></i>Ya
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="T">
                                                                    <i></i>Tidak
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="P">
                                                                    <i></i>Proses
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                    @using (Html.BeginForm("EXCLaporanKewangan8Bulanan", "Kewangan8", FormMethod.Post, new { id = "form-excel", target = "_blank" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row hide">
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
                                                            <label class="select">
                                                                @Html.DropDownList("bulan", new SelectList(ViewBag.month, "Value", "Text"), new { @class = "form-control", id = "bulan" })
                                                                <i></i>
                                                            </label>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
                                                            <label class="input">
                                                                @Html.TextBox("tahun", (int)ViewBag.year, new { @class = "form-control", size = 4, id = "tahun" })
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left smart-form">
                                                            <b>Status Muktamat : </b>
                                                        </div>
                                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 smart-form">
                                                            <div class="inline-group">
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="S" checked="checked">
                                                                    <i></i>Semua
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="Y">
                                                                    <i></i>Ya
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="T">
                                                                    <i></i>Tidak
                                                                </label>
                                                                <label class="radio">
                                                                    <input type="radio" id="status" name="status" value="P">
                                                                    <i></i>Proses
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <br />
                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-hide="phone">No Pekerja</th>
                                        <th data-class="expand">Nama Pekerja</th>
                                        <th>Tarikh Mula</th>
                                        <th>Tarikh Akhir</th>
                                        <th>Kew 8</th>
                                        <th>Muktamat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ var no = 0;}
                                    @foreach (HR_MAKLUMAT_KEWANGAN8 item in Model)
                                    {
                                        ++no;
                                        List<HR_MAKLUMAT_PERIBADI> peribadi = (List<HR_MAKLUMAT_PERIBADI>)ViewBag.peribadi;
                                        List<HR_KEWANGAN8> kew8 = (List<HR_KEWANGAN8>)ViewBag.kew8;
                                        var namaPekerja = "";
                                        var q8 = "";
                                        var ind = "Tidak";
                                        var color = "label-danger";
                                        foreach (var p in peribadi)
                                        {
                                            if (p.HR_NO_PEKERJA == item.HR_NO_PEKERJA)
                                            {
                                                namaPekerja = p.HR_NAMA_PEKERJA;
                                            }
                                        }
                                        foreach (HR_KEWANGAN8 k in kew8)
                                        {
                                            if (k.HR_KOD_KEW8 == item.HR_KOD_PERUBAHAN)
                                            {
                                                q8 = k.HR_PENERANGAN;
                                            }
                                        }
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => item.HR_NO_PEKERJA)
                                            </td>
                                            <td>
                                                @namaPekerja
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.HR_TARIKH_MULA)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.HR_TARIKH_AKHIR)
                                            </td>
                                            <td>
                                                @q8
                                            </td>
                                            <td>
                                                @if (item.HR_FINALISED_IND_HR == "Y")
                                                {
                                                    ind = "Ya";
                                                    color = "label-success";
                                                }
                                                else if (item.HR_FINALISED_IND_HR == "P")
                                                {
                                                    ind = "Dalam Proses";
                                                    color = "label-warning";
                                                }
                                                <span class="center-block padding-5 label @color">
                                                    @ind
                                                </span>

                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </article>

        </div>
    </section>
</div>
