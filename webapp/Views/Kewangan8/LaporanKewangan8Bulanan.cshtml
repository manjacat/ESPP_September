                                <div class="col col-lg-8 col-md-8 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2">
                                    @using (Html.BeginForm("LaporanKewangan8Bulanan", "Kewangan8", FormMethod.Post, new { id = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row">
                                            <div class="col col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <div class="well">
                                                    <div class="row">
                                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 smart-form">
