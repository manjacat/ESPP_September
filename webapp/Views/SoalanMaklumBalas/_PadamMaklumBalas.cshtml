



@model eSPP.Models.HR_SOALAN_MB

<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Padam Soalan Maklum Balas  <span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("PadamMaklumBalas", "SoalanMaklumBalas", FormMethod.Post,new {@class = "smart-form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HR_KOD_MB);
            <fieldset>
                <section>
                    <div class="row">
                        <label class="label col col-4">Jenis Maklum Balas  </label>
                        <div class="col col-8">
                            <label class="select">
                                <i class="icon-append fa fa-lock"></i>
                                @Html.DropDownListFor(model => model.HR_MB_IND, null, String.Empty, new { @class = "form-control", disabled = "disabled" })
                                <i></i>
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Soalan Maklum Balas  </label>
                        <div class="col col-8">
                            <label class="textarea textarea-resizable">
                                <i class="icon-append fa fa-comment"></i>
                                @Html.TextAreaFor(model => model.HR_PENERANGAN_MB, new { @class = "form-control", rows = 5, disabled = "disabled" })

                            </label>
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer>
                <button type="submit" id="btn" class="btn btn-danger">
                    <span class="fa fa-trash-o"></span> Padam
                </button>
                <a type="button" class="btn btn-default" href="soalanmaklumbalas">
                    Kembali
                </a>
            </footer>
        }

    </div>

</div>
@section pagespecific { 
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });
        })
    </script> 
}