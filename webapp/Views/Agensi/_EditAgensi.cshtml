


@model eSPP.Models.HR_AGENSI

<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Edit Agensi<span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("EditAgensi", "Agensi", FormMethod.Post, new { id = "order-form", @class = "smart-form", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HR_KOD_AGENSI);

            <fieldset>
                <section>
                    <div class="row">
                        <label class="label col col-4">Singkatan  </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_SINGKATAN, new { htmlAttributes = new { @class = "form-control", maxlength = "10" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Nama Agensi  </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_NAMA_AGENSI, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Alamat  </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_ALAMAT1, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">  </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_ALAMAT2, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">  </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_ALAMAT3, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4"> Bandar </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_BANDAR, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4"> Poskod </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_POSKOD, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Negeri  </label>
                        <div class="col col-8">
                            <label class="select">
                                @Html.DropDownListFor(model => model.HR_NEGERI, null, String.Empty, new { @class = "form-control" })
                                <i></i>
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4"> No. Fail </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_NO_FAIL, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">   No. Telefon 1 </label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_TELEFON1, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">    No. Telefon 2 </label>
                        <div class="col col-8">
                            <label class="input">

                                @Html.EditorFor(model => model.HR_TELEFON2, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">   No. Faks 1 </label>
                        <div class="col col-8">
                            <label class="input">

                                @Html.EditorFor(model => model.HR_FAKS1, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">      No. Faks 2</label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_FAKS2, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4"> Alamat Email</label>
                        <div class="col col-8">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                <b class="tooltip tooltip-top-right">
                                    <i class="fa fa-warning txt-color-teal"></i>
                                    Sila isikan e-mel dengan betul (cth: = example@mbpj.gov.my)
                                </b>
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Perbankan</label>
                        <div class="col col-8">
                            <div class="inline-group">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_PERBANKAN, "Y", htmlAttributes: new { @class = "form-control" })
                                    <i></i>Aktif
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_PERBANKAN, "T", htmlAttributes: new { @class = "form-control" })
                                    <i></i>Tidak Aktif
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Status</label>
                        <div class="col col-8">
                            <div class="inline-group">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_AKTIF_IND, "Y", htmlAttributes: new { @class = "form-control" })
                                    <i></i>Aktif
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.HR_AKTIF_IND, "T", htmlAttributes: new { @class = "form-control" })
                                    <i></i>Tidak Aktif
                                </label>
                            </div>
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer>
                <button type="submit" id="btn" class="btn btn-primary">
                    <span class="fa fa-send-o"></span> Hantar
                </button>
                <a type="button" class="btn btn-default" href="agensi">
                    Kembali
                </a>
            </footer>
                                    }

    </div>

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });

            var $orderForm = $("#order-form").validate({
                // Rules for form validation
                rules: {
                    HR_SINGKATAN: {
                        required: true,
                        remote: {
                            url: "Agensi/CariEditAgensi",
                            type: "get",
                            data: {
                                singkatan: function () {
                                    return $("#HR_SINGKATAN").val();
                                },
                                kod : function(){
                                    return $("#HR_KOD_AGENSI").val();
                                }
                            }
                        }
                    },
                    HR_NAMA_AGENSI: {
                        required: true,
                        remote: {
                            url: "Agensi/CariEditAgensi",
                            type: "get",
                            data: {
                                nama: function () {
                                    return $("#HR_NAMA_AGENSI").val();
                                },
                                kod : function(){
                                    return $("#HR_KOD_AGENSI").val();
                                }
                            }
                        }
                    },


                },

                // Messages for form validation
                messages: {
                    HR_SINGKATAN: {
                        required: 'Nama Singkatan diperlukan'
                    },
                    HR_NAMA_AGENSI: {
                        required: 'Sila masukkan Nama Agensi',

                    },

                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });


            })
    </script> 
