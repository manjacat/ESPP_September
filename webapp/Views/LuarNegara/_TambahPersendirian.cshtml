
@model eSPP.Models.HR_SEMINAR_LUAR
<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Tambah Permohonan Persendirian Ke Luar Negeri  <span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("TambahPersendirian", "LuarNegara", FormMethod.Post, new { id = "order-form", @class = "smart-form", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <fieldset class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="row">

                    <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="row">
                            @*<section class="col col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Kod. Lawatan</label>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <label class="input">
                                        <i class="icon-append fa fa-list-alt"></i>
                                        @Html.EditorFor(model => model.HR_KOD_LAWATAN, new { htmlAttributes = new { @class = "form-control" } })
                                    </label>
                                </div>
                            </section>*@
                            <section class="col col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Bulan</label>
                                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                    <label class="input">
                                        @Html.EditorFor(model => model.HR_KOD_LAWATAN, new { htmlAttributes = new { @class = "form-control" } })
                                    </label>
                                </div>
                            </section>
                            <section class="col col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Tahun</label>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

                                    <label class="input">

                                        <input class="form-control" value="@DateTime.Now.Year" name="tahundibayar" id="tahundibayar">

                                    </label>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend style="background-color:white">
                    Maklumat Perjalanan Ke Luar Negara
                </legend>
                <div class="row">
                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Tarikh Dari</label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                @Html.TextBoxFor(model => model.HR_TARIKH_MULA, new { @type = "date" })
                            </label>
                        </div>
                    </section>
                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Tarikh Hingga</label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                @Html.TextBoxFor(model => model.HR_TARIKH_TAMAT, new { @type = "date" })
                            </label>
                        </div>
                    </section>
                </div>
                <br />
                <div class="row">
                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Nama Persidangan/Seminar/Lawatan Rasmi</label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="textarea textarea-resizable">
                                <i class="icon-append fa fa-comment"></i>
                                @Html.EditorFor(model => model.HR_NAMA_SEMINAR, new { htmlAttributes = new { @class = "form-control" } })
                            </label>
                        </div>

                    </section>

                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Tujuan</label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_TUJUAN, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>

                    </section>
                </div>
                <div class="row">
                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Tempat</label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="input">
                                @Html.EditorFor(model => model.HR_TEMPAT, new { htmlAttributes = new { @class = "form-control" } })

                            </label>
                        </div>

                    </section>
                    <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <label class="label col-lg-4 col-md-4 col-sm-12 col-xs-12">Perbelanjaan Ditanggung oleh </label>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <label class="select">
                                @Html.DropDownListFor(model => model.HR_PERBELANJAAN, new SelectList(ViewBag.belanja, "Value", "Text"), String.Empty, htmlAttributes: new { @class = "form-control" })
                                <i></i>
                            </label>
                        </div>

                    </section>
                  
                </div>
                
               
            </fieldset>

            <footer>
                <button type="submit" id="btn" class="btn btn-primary">
                    <span class="fa fa-send-o"></span> Hantar
                </button>
                <a type="button" class="btn btn-default" href="luarnegara">
                    Kembali
                </a>
            </footer>
        }

    </div>

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });


         
        })
    </script>
