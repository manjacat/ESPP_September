                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-lg-2 col-md-2 col-sm-12">
                                            <label class="label">
                                                Elaun
                                            </label>
                                        </section>
                                        <section class="col col-lg-6 col-md-6 col-sm-12">
                                            <label class="input">
                                                @Html.EditorFor(model => model.HR_KOD_ELAUN, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.HR_KOD_ELAUN, "", new { @class = "text-danger" })
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-lg-6 col-md-6 col-sm-6 col-xs-6">
