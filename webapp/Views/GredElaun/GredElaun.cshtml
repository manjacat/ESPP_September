                                            <label class="label">
                                                Gred Jawatan
                                            </label>
                                        </section>
                                        <section class="col col-lg-6 col-md-6 col-sm-12">
                                            <label class="input">
                                                @Html.EditorFor(model => model.HR_GRED, new { htmlAttributes = new { @class = "form-control" } })
