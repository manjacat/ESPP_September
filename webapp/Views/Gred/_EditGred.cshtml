

@model eSPP.Models.GE_PARAMTABLE

<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Edit Gred<span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("EditGred", "Gred", FormMethod.Post, new { id = "gred-form", @class = "smart-form", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ORDINAL);
            @Html.HiddenFor(model => model.GROUPID);
            <fieldset>
                <section>
                    <div class="row">
                        <label class="label col col-4">Gred  </label>
                        <div class="col col-8">
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                @Html.EditorFor(model => model.SHORT_DESCRIPTION, new { htmlAttributes = new { @class = "form-control", maxlength = 4 } })

                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Sistem Saraan</label>
                        <div class="col col-8">
                            <div class="inline-group">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.STRING_PARAM, "SSB", htmlAttributes: new { @class = "form-control" })
                                    <i></i>SSB
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.STRING_PARAM, "SSM", htmlAttributes: new { @class = "form-control" })
                                    <i></i>SSM
                                </label>
                            </div>
                        </div>
                    </div>
                </section>


            </fieldset>

            <footer>
                <button type="submit" id="btn" class="btn btn-primary">
                    <span class="fa fa-send-o"></span> Hantar
                </button>
                <a type="button" class="btn btn-default" href="gred">
                    Kembali
                </a>
            </footer>
                                    }

    </div>

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });

            var $gredForm = $("#gred-form").validate({
                // Rules for form validation
                rules: {
                    SHORT_DESCRIPTION: {
                        required: true,
                        remote: {
                            url: "Gred/CariEditGred",
                            type: "get",
                            data: {
                                penerangan: function () {
                                    return $("#SHORT_DESCRIPTION").val();
                                },
                                kod: function () {
                                    return $("#ORDINAL").val();
                                }


                            }
                        }
                    },


                },

                // Messages for form validation
                messages: {
                    SHORT_DESCRIPTION: {
                        required: 'Pilihan Gred diperlukan'
                    },

                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });

        })
    </script> 
