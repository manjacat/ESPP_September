
@model eSPP.Models.HR_CUTI_UMUM
<div>
    <div class="modal-header">
        <button type="button" class="close" id="Tambah-btn" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title">
            Padam Cuti Umum  <span class="error"></span>
        </h4>
    </div>
    <div class="modal-body no-padding">

        @using (Html.BeginForm("PadamCuti","CutiUmum", FormMethod.Post,new {@class = "smart-form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           @Html.HiddenFor(model => model.HR_KOD_CUTI_UMUM);
            @Html.HiddenFor(model => model.HR_TARIKH);


            <fieldset>

                <section>
                    <div class="row">
                        <label class="label col col-4">Keterangan Cuti  </label>
                        <div class="col col-8">
                            <label class="select">
                                <i class="icon-append fa fa-briefcase"></i>
                                @Html.DropDownListFor(model => model.HR_KOD_CUTI_UMUM, null, String.Empty, new { @class = "form-control", disabled = "disabled" })
                                <i></i>
                            </label>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <label class="label col col-4">Singkatan Cuti  </label>
                        <div class="col col-8">
                            <label class="input">
                                <i class="icon-append fa fa-calendar"></i>
                                <input type="text" name="HR_TARIKH" id="HR_TARIKH" class="form-control" value="@string.Format("{0:dd/MM/yyyy}", Model.HR_TARIKH)" disabled="disabled" />
                            </label>
                        </div>
                    </div>
                </section>
            </fieldset>
            <footer>
                <button type="submit" id="btn" class="btn btn-danger">
                    <span class="fa fa-trash-o"></span> Padam
                </button>
                <a type="button" class="btn btn-default" href="cutiumum">
                    Kembali
                </a>
            </footer>
        }

    </div>

</div>
@section pagespecific { 
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Tambah-btn").click(function () {
                debugger
                $('#TambahModal').modal('hide');
            });
        })
    </script> 
}